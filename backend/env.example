# Real-Time Chat Application Environment Configuration
# Copy this file to .env and update the values

# Application Configuration
APP_NAME=RealTime Chat App
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
ENABLE_API_DOCS=true
ENABLE_SECURITY_HEADERS=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1
ACCESS_LOG=true

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=chat_user
POSTGRES_PASSWORD=chat_password_dev
POSTGRES_DB=realtime_chat

# Database Configuration - MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=admin_password_dev
MONGODB_DB=realtime_chat

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE_URI=

# Session Configuration
SESSION_EXPIRE_SECONDS=86400
REDIS_SESSION_PREFIX=session:
REDIS_RATE_LIMIT_PREFIX=rate_limit:

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS_PER_USER=5
WEBSOCKET_MESSAGE_QUEUE_SIZE=1000

# File Upload Configuration
UPLOAD_DIR=uploads
FILE_STORAGE_TYPE=local
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "image/webp", "application/pdf", "text/plain", "application/json"]

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# OpenAI Configuration (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Search Configuration
SEARCH_RESULTS_PER_PAGE=20
SEARCH_MAX_RESULTS=1000

# Cache Configuration
CACHE_TTL_SEARCH=300
CACHE_TTL_SUMMARY=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Encryption Configuration
ENCRYPTION_KEY=your-encryption-key-change-this-in-production 