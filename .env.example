# Real-Time Chat Application Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=RealTime Chat
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your-32-byte-encryption-key-for-server-side-encryption

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=realtime_chat
POSTGRES_USER=chat_user
POSTGRES_PASSWORD=your_postgres_password
DATABASE_URL=postgresql://chat_user:your_postgres_password@localhost:5432/realtime_chat

# MongoDB Database
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=realtime_chat
MONGODB_USER=chat_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_URL=mongodb://chat_user:your_mongodb_password@localhost:27017/realtime_chat

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_URL=redis://:your_redis_password@localhost:6379/0

# Session Configuration
SESSION_EXPIRE_SECONDS=86400
REDIS_SESSION_PREFIX=session:
REDIS_RATE_LIMIT_PREFIX=rate_limit:

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS_PER_USER=5
WEBSOCKET_MESSAGE_QUEUE_SIZE=1000

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "application/pdf", "text/plain"]
UPLOAD_DIRECTORY=./uploads
FILE_STORAGE_TYPE=local
# FILE_STORAGE_TYPE=s3  # For production

# AWS S3 Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-chat-app-bucket

# OpenAI API Configuration (for chat summaries)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10
RATE_LIMIT_WINDOW_SIZE=60

# Search Configuration
SEARCH_RESULTS_PER_PAGE=20
SEARCH_CACHE_TTL_SECONDS=600
ENABLE_SEARCH_ANALYTICS=true

# Encryption Configuration
E2E_ENCRYPTION_ENABLED=true
KEY_ROTATION_INTERVAL_DAYS=30
RSA_KEY_SIZE=2048
AES_KEY_SIZE=256

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_ENDPOINT=/health

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourchatapp.com

# Push Notifications (optional)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Development Settings
RELOAD=true
WORKERS=1
ACCESS_LOG=true

# Production Settings (override in production)
# RELOAD=false
# WORKERS=4
# ACCESS_LOG=false
# DEBUG=false
# LOG_LEVEL=WARNING

# Database Connection Pools
POSTGRES_MIN_CONNECTIONS=5
POSTGRES_MAX_CONNECTIONS=20
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=20
REDIS_CONNECTION_POOL_SIZE=10

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Feature Flags
ENABLE_MESSAGE_REACTIONS=true
ENABLE_TYPING_INDICATORS=true
ENABLE_READ_RECEIPTS=true
ENABLE_MESSAGE_EDITING=true
ENABLE_MESSAGE_DELETION=true
ENABLE_FILE_SHARING=true
ENABLE_VOICE_MESSAGES=false
ENABLE_VIDEO_CALLS=false

# Chatroom Settings
DEFAULT_MAX_MEMBERS=100
DEFAULT_MESSAGE_RETENTION_DAYS=365
DEFAULT_AUTO_SUMMARY_THRESHOLD=50
MAX_CHATROOMS_PER_USER=50
MAX_MESSAGE_LENGTH=4000

# Security Headers
ENABLE_SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_URL=/docs
REDOC_URL=/redoc

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_realtime_chat
TEST_MONGODB_URL=mongodb://test_user:test_password@localhost:27017/test_realtime_chat
TEST_REDIS_URL=redis://localhost:6379/1

